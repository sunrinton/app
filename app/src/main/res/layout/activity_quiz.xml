<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <ImageView
    android:layout_width="match_parent"
    android:layout_height="81dp"
        app:layout_constraintBottom_toTopOf="@android:id/background"
    android:src="@drawable/logo"
        android:id="@+id/logo"
        />

    <TextView

        android:id="@+id/quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="QUIZ1"
        android:textColor="#001AFF"
        android:textFontWeight="900"
        android:textSize="33dp"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        tools:layout_editor_absoluteX="0dp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/quiz"
        android:textSize="33dp"
        android:textColor="#000000"
        android:gravity="center"
        android:text="'쌉파서블'의 뜻은?"
        android:id="@+id/ment"
        android:layout_marginBottom="10dp"
        />

        <Button
            android:stateListAnimator="@null"
            android:background="@drawable/radius_button"
            android:layout_width="292dp"
            android:layout_height="45dp"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ment"
            android:layout_marginTop="24dp"
            android:id="@+id/quizBtn_1"
            android:text="정말 가능하다"
            />



    <Button
        android:stateListAnimator="@null"
        android:background="@drawable/radius_button"
        android:layout_width="292dp"
        android:layout_height="45dp"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizBtn_1"
        android:layout_marginTop="24dp"
        android:id="@+id/quizBtn_2"
        android:text="정말 불가능하다"
        />





</androidx.constraintlayout.widget.ConstraintLayout>