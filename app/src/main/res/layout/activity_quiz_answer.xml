<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <ImageView
    android:layout_width="match_parent"
    android:layout_height="81dp"
        app:layout_constraintBottom_toTopOf="@android:id/background"
    android:src="@drawable/logo"
        android:id="@+id/logo"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="정답은"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:layout_marginTop="100dp"
        android:textSize="33dp"
        android:id="@+id/quiz"
        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/quiz"
        android:textSize="33dp"
        android:textColor="#000000"
        android:gravity="center"
        android:text="'어쩌구'입니다!"
        android:id="@+id/ment"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="adsasd\nasdsad\nasdasd"
        android:textColor="#000000"
        android:gravity="center"
        android:id="@+id/mean"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ment"

        ></TextView>

    <LinearLayout
        android:layout_marginTop="114dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ment"
        android:gravity="center"
        >
        <Button

            android:stateListAnimator="@null"
            android:background="@drawable/yellow_radius_button"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:layout_width="292dp"
            android:layout_height="40dp"
            android:id="@+id/nextQuiz"
            android:text="다음문제로"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>